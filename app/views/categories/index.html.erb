

<table>
  <thead>
    <tr>
      <th>Category </th>
    </tr>
  </thead>

  <tbody>
    <% @category.each do |category| %>
      <tr>
        <td><%= category.category %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.present? %>
  <%= link_to 'New Category', new_category_path %><br><br>
<% end %>