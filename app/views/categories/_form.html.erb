<% @category.errors.full_messages.each do |error| %>
  <%= error %><br>
<% end %>

<%= form_for(@category) do |f| %>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <br>
  <% if params[:product_id] %>
    <%= f.hidden_field :product_id, value: params[:product_id] %>
    <% end %>
  <%= f.submit 'create category' %>
  <% end %>