<h2>Your Fulfillments </h2>
<br>
<% @order.errors.full_messages.each do |error| %>
  <%= error %><br>
<% end %>

<% merchant_orders = Order.get_merchant_orders(@current_user) %>

<p>Total Revenue: </p>
<% sum = 0 %>
<% merchant_orders.each do |order| %>
  <% order.products.each do |product| %>
    <% if product.user_id == @current_user.id %>
      <% order_item = order.set_order_item_and_product(product.id)[1] %>
      <% sum += product.price * order_item.quantity %>
    <% end %>
  <% end %>
<% end %>
<%= sum %>
<br>
<p>Total Fulfillments: </p>
<%= merchant_orders.length %></p>

<p>Revenue From Paid Orders: </p>
<% if merchant_orders.delete_if{ |order| order.status != 'paid'}.length == 0 %>
  <p> None! </p>
<% else %>
  <% sum = 0 %>
  <% merchant_orders.each do |order| %>
    <% order.products.each do |product| %>
      <% if product.user_id == @current_user.id %>
        <% order_item = order.set_order_item_and_product(product.id)[1] %>
        <% sum += product.price * order_item.quantity %>
      <% end %>
    <% end %>
  <% end %>
  <%= sum %>
<% end %>
<br>

