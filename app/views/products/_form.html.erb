

 <%= form_for(@product) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>

  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>

  <%= f.label :category %>
  <%= f.text_field :category %>
  <br>

  <%= f.label :price %>
  <%= f.number_field :price %>
  <br>

  <%= f.label :image, "Upload local file:" %><br />
  <%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>
<br>

  <%= f.submit 'create product'%>
    <% end %>