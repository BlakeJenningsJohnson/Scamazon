<h1> Check out all the products available here at Scamazon! </h1>


<%= button_to 'Browse by category', action: :category %>
<table>
  <thead>
    <tr>
      <th>Product Name </th>
      <th>Product Description </th>
      <th>Price</th>
      <th>Category</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product_path(product.id) %></td>
        <td><%= product.description %></td>
        <td>$ <%= (product.price.to_f/100) %></td>
        <td> <% product.categories.each do |category| %>
              <%= category.category %>
              <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @current_user.present? %>
<%= link_to 'New Product', new_product_path %><br><br>
<% end %>